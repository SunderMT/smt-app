pipeline {
    agent any 
    stages {
        stage('Install') { 
            steps {
                sh 'cd smt-app && npm install'
            }
        }
        stage('Run Test') { 
            steps {
                sh 'npm test'
            }
        }
        stage('Build') { 
            steps {
                sh 'ng build --prod'
            }
        }
        stage('Deploy Build') { 
            steps {
                sh 'mv dist/smt-app ../builds/smt-app'
            }
        }
    }
}
